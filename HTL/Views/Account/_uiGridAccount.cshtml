@model DusColl.vmAccount
<style>
    td:not(:last-child) {
        white-space: nowrap;
    }

    td:last-child {
        width: 17%;
    }
</style>
<div class="table-toolbar">
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
            <div class="btn-group pull-right">
                <button class="btn green" onclick="vmAccount.addaccount('x','add')">
                    <i class="fa fa-user"></i> &nbsp;
                    Add User
                </button>
            </div>
        </div>
    </div>
</div>
<table class="table table-striped table-hover table-bordered" id="sample_editable_acctount">
    <thead>
        <tr>
            <th>User ID </th>
            <th>Name </th>
            <th>Mail</th>
            <th>User Type</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            if (Model.AccountDetailList != null)
            {
                if (Model.AccountDetailList.Count > 0)
                {
                    foreach (var item in Model.AccountDetailList)
                    {
                        <tr>
                            <td>
                                @Html.Raw(item.UserID)
                            </td>
                            <td>
                                @Html.Raw(item.UserName)
                            </td>
                            <td>
                                @Html.Raw(item.Email)
                            </td>
                            <td>
                                @Html.Raw((DusColl.UserType)item.UserType)
                            </td>
                            <td>
                                @Html.Raw(item.Status)
                            </td>
                            <td>
                                <a class="" href="javascript:;" onclick="vmAccount.addaccount('@item.secIDUser')">
                                    <i class="fa fa-edit"></i>
                                    Edit
                                </a><span>&nbsp;</span>
                                <a class="" href="javascript:;" onclick="vmAccount.resetaccount('@item.secIDUser')">
                                    <i class="fa fa-circle-o"></i>
                                    Reset
                                </a><span>&nbsp;</span>
                                <a class="" href="javascript:;" onclick="vmAccount.deleteaccount('@item.secIDUser')">
                                    <i class="fa fa-eraser"></i>
                                    Delete
                                </a>
                            </td>

                        </tr>
                    }
                }
            }}

    </tbody>
</table>



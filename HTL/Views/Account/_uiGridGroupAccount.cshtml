@model DusColl.vmAccount
<style>
    #sample_editable_acctountgroup td:not(:last-child) {
        white-space: nowrap;
    }

    #sample_editable_acctountgroup td:last-child {
        width: 11%;
    }
</style>
<div class="table-toolbar">
    <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
            <div class="btn-group pull-right">
                <button class="btn green" data-toggle="dropdown" aria-expanded="false">
                    <i class="icon-settings"></i>&nbsp;Tools
                </button>
                <ul class="dropdown-menu pull-right">
                    <li>
                        <a href="javascript:;" onclick="vmAccount.addgrups('x','add')">Add Groups </a>
                    </li>
                    <li>
                        <a href="javascript:;" onclick="vmAccount.addgroupaccount('x','y','add')">Add Users Group </a>
                    </li>
                    <li>
                        <a href="javascript:;" onclick="vmAccount.addmetrikgroup('x', 'x','add')">Add Permission </a>
                    </li>

                    <li>
                        <a href="javascript:;" onclick="vmAccount.listgroup()">List Groups </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<table class="table table-striped table-hover table-bordered" id="sample_editable_acctountgroup">
    <thead>
        <tr>
            <th>Group Name </th>
            <th>User ID </th>
            <th>User Type </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @{
            if (Model.AccountGroupUserList != null)
            {
                if (Model.AccountGroupUserList.Count > 0)
                {
                    foreach (var item in Model.AccountGroupUserList)
                    {
                        <tr>
                            <td>
                                @Html.Raw(item.GroupName)
                            </td>
                            <td>
                                @Html.Raw(item.UserGrup)
                            </td>
                            <td>
                                @Html.Raw((DusColl.UserType)item.UserType)
                            </td>
                            <td>
                                <a class="" href="javascript:;" onclick="vmAccount.addgroupaccount('@item.secIDUser','@item.SecGroupName','upt')">
                                    <i class="fa fa-edit"></i>
                                    Edit
                                </a><span>&nbsp;</span>
                                <a class="" href="javascript:;" onclick="vmAccount.deletegroupaccount('@item.secIDUser','@item.SecGroupName')">
                                    <i class="fa fa-eraser"></i>
                                    Delete
                                </a>
                            </td>

                        </tr>
                    }
                }
            }}

    </tbody>
</table>

<div id="uiGroupAcccountAdd">
</div>
<div id="uiMetrikGroupAdd">
</div>

@{Html.RenderPartial("~/Views/Account/uiGroups.cshtml");}
@{Html.RenderPartial("~/Views/Account/uiMatrik.cshtml");}
<div class="profile-content">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title tabbable-line">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" data-toggle="tab">Data Pribadi</a>
                        </li>
                        <li>
                            <a href="#tab_1_2" data-toggle="tab">Ubah Photo</a>
                        </li>
                    </ul>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <!-- PERSONAL INFO TAB -->
                        <div class="tab-pane active" id="tab_1_1">
                            @using (Ajax.BeginForm("clnAccountProfileSave", new { Controller = "Account" }, new AjaxOptions { HttpMethod = "POST" }, new { id = "frmaccountprofilesave", @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken();
                                @Html.HiddenFor(m => m.AccountDetail.secIDUser)
                                <div class="form-group">
                                    <label class="control-label">User ID</label>
                                    @Html.TextBoxFor(x => x.AccountDetail.UserID, new { @class = "form-control", placeholder = "User ID" })

                                </div>
                                <div class="form-group">
                                    <label class="control-label">Full Name</label>
                                    @Html.TextBoxFor(x => x.AccountDetail.UserName, new { @class = "form-control", placeholder = "Full Name" })
                                    @Html.ValidationMessageFor(m => m.AccountDetail.UserName, "", new { @class = "error-block" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Email</label>
                                    @Html.TextBoxFor(x => x.AccountDetail.Email, new { @class = "form-control", placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.AccountDetail.Email, "", new { @class = "error-block" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Mobile Number</label>
                                    @Html.TextBoxFor(x => x.AccountDetail.Phone, new { @class = "form-control", placeholder = "Mobile Number" })
                                    @Html.ValidationMessageFor(m => m.AccountDetail.Phone, "", new { @class = "error-block" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Interests</label>
                                    @Html.TextBoxFor(x => x.AccountDetail.Interest, new { @class = "form-control", placeholder = "Interests" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Occupation</label>
                                    @Html.TextBoxFor(x => x.AccountDetail.Jobs, new { @class = "form-control", placeholder = "Occupation" })

                                </div>
                                <div class="form-group">
                                    <label class="control-label">Address</label>
                                    @Html.TextAreaFor(x => x.AccountDetail.Address, new { @class = "form-control", placeholder = "Address", rows = "3" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">About</label>
                                    @Html.TextAreaFor(x => x.AccountDetail.About, new { @class = "form-control", placeholder = "About", rows = "3" })
                                </div>
                                <div class="margiv-top-10">
                                    <a href="javascript:;" class="btn green" onclick="vmAccount.SubmiChangetPropfileAfterajaxcall('#frmaccountprofilesave')">
                                        <i class="fa fa-save"></i>&nbsp;Save Changes </a>
                                </div>
                            }
                        </div>
                        <!-- END PERSONAL INFO TAB -->
                        <!-- CHANGE AVATAR TAB -->
                        <div class="tab-pane" id="tab_1_2">
                            <p>
                                You Can Change Your Photo Profile, select your Image bellow
                            </p>
                            @using (Ajax.BeginForm("clnAccountUploadipt", new { Controller = "Account" }, new AjaxOptions { HttpMethod = "POST" },
                        new { @id = "frmuploadaccount", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.AccountDetail.secIDUser)
                                <div class="">
                                    <div class="form-group">
                                        <div class="">
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="input-group input-medium">
                                                    <div class="form-control uneditable-input input-fixed input-small" data-trigger="fileinput">
                                                        <span class="fileinput-filename"></span>
                                                    </div>
                                                    <span class="input-group-addon btn default btn-file">
                                                        <span class="fileinput-new"><i class="fa fa-file fileinput-exists"></i>&nbsp;Select Photo </span>
                                                        <span class="fileinput-exists"><i class="fa fa-file fileinput-exists"></i>&nbsp;Change Photo </span>
                                                        <input type="file" name="FileUpload" required="required">
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green">
                                        <i class="fa fa-upload"></i><span>&nbsp;Upload</span>
                                    </button>
                                </div>
                            }
                            <br />
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Notes</h3>
                                </div>
                                <div class="panel-body">
                                    <ul>
                                        <li>Files that may be uploaded must be smaller than 300 KB.
                                        </li>
                                    </ul>

                                </div>
                            </div>
                        </div>
                        <!-- END CHANGE AVATAR TAB -->


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END PROFILE CONTENT -->
<script>
    $.validator.unobtrusive.parse("#frmaccountprofilesave");
    $.validator.unobtrusive.parse("#frmuploadaccount");
</script>


<!-- BEGIN LOGIN FORM -->
@model DusColl.vmAccount
<div class="modal fade" id="addgrupdialog" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@ViewBag.caption</h4>
            </div>
            <div class="modal-body" id="addgrupbody">

                @using (Ajax.BeginForm("clnGroupSave", new { Controller = "Account" }, new AjaxOptions { HttpMethod = "POST" }, new { id = "frmaddgroup", @class = "form-horizontal" }))
                {
                 
                    @Html.AntiForgeryToken();
                    @Html.HiddenFor(m => m.AccountGroup.SecGroupName)
                    @Html.Hidden("hdparops");
                    <div class="">
                        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                        <label class="control-label visible-ie8 visible-ie9">Username</label>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                GroupName
                            </label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.AccountGroup.GroupName, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Group Name", Value = @Model.AccountGroup.GroupName })
                                @Html.ValidationMessageFor(m => m.AccountGroup.GroupName, "", new { @class = "error-block" })
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-4">
                                    <button type="button" class="btn green" onclick="vmAccount.SubmitAfterajaxcalladdGrups('#frmaddgroup')">
                                        <i class="fa fa-save"></i><span>&nbsp;Save</span></button>
                                    <button type="button" class="btn green" data-dismiss="modal">
                                        <i class="fa fa-close"></i><span>&nbsp;Close</span></button>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>


<script>
    var placeholder = "Select..";
    $(".select2, .select2-multiple").select2({
        placeholder: placeholder,
        width: null
    });
    $.getScript("Scripts/jquery.unobtrusive-ajax.min.js", function () {
        $.validator.unobtrusive.parse("#frmaddgroup");
    });
    $.getScript("Scripts/vmAccount.js", function () {
    });
</script>

<!-- END LOGIN FORM -->

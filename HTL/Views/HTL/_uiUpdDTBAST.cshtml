@model HashNetFramework.cFilterContract
<div class="modal fade" id="OpenAddUploadRegisHTFlag" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            @using (Ajax.BeginForm("clnOpenAddBASTSCHFLAG", new { Controller = "HTL" }, new AjaxOptions
            {
                HttpMethod = "POST"
            }, new
            {
                id = "billpayment_form_flag",
                @class = "form-horizontal",
                enctype = "multipart/form-data"
            }))
            {

            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">BAST</h4>
            </div>

            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row" style="padding-left:20px">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="control-label">Jenis Proses</label>
                                @Html.DropDownListFor(m => m.JenisTransaksi, (IEnumerable<SelectListItem>)ViewData["SelectTrans"], "Pilih..", new { @class = "select2 form-control cmb", @title = "Pilih " })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="control-label">No BAST/No Aplikasi</label>
                                <input type="text" class="form-control" name="NoBast" id="NoBast" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="control-label">Tanggal </label>
                                <div class="input-group date-picker input-daterange" data-date="31/01/1999" data-date-format="dd-MM-yyyy" autocomplete="off">
                                    <input class="form-control" name="Tglbast" id="Tglbast" type="text" placeholder="Tanggal">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="control-label">Upload File</label>
                                <input type="file" accept=".pdf" name="upflebyr" id="upflebyr" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn green" data-dismiss="modal">
                    <i class="fa fa-close"></i>
                    <span>&nbsp;Tutup</span>
                </button>
                <button type="button" value="" class="btn green submtflagbast">
                    <i class="fa fa-check-square"></i>
                    <span>&nbsp;Proses </span>
                </button>
            </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>
    $('.select2').select2();
    $('.date-picker').datepicker({
        rtl: App.isRTL(),
        orientation: "right bottom",
        autoclose: true
    });
    $.getScript("Scripts/vmHTL.js", function () {
    });
</script>
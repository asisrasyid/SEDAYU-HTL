        .done(function (script, textStatus) {
            var currentP = 1;
            var totalRDBAll = '50';
            var totalR = '50';
            var totalP = 1;
            var nextP = 1;
            var prevP = 1;
            var tbj = true
            var tbjd = true
            var tbjg = true
            var parurl = 'HTL/clnRgridHeaderTx';
            var divgrid = 'gdtnh';
            var tabled = 'tblupp';

